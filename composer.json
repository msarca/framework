{
    "name": "opis/colibri",
    "type": "project",
    "description": "A different kind of framework",
    "keywords": ["framework", "php"],
    "homepage": "http://opis.io",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Marius Sarca",
            "email": "marius.sarca@gmail.com"
        }
    ],
    "require": {
        "opis/container": "2.1.*",
        "opis/http": "1.3.*",
        "opis/http-routing": "2.2.*",
        "opis/view": "2.2.*",
        "opis/events": "2.2.*",
        "opis/config": "1.2.*",
        "opis/cache": "1.5.*",
        "opis/session": "2.0.*",
        "symfony/console": "2.4"
    },
    "autoload":{
        "psr-4": {"Opis\\Colibri\\": "system/lib"},
        "classmap": ["system/includes/collectors.php"],
        "files": ["system/includes/define.php",
                  "system/includes/functions.php"]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
