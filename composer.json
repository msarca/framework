{
    "name": "opis/colibri",
    "license": "Apache-2.0",
    "description": "Opis Colibri Framework",
    "keywords": ["opis", "colibri", "framework", "core"],
    "homepage": "http://opis.io",
    "authors": [
        {
            "name": "Marius Sarca",
            "email": "marius.sarca@gmail.com"
        },
        {
            "name": "Sorin Sarca",
            "email": "sarca_sorin@hotmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Opis\\Colibri\\": "src/"
        },
        "files": ["src/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Opis\\Colibri\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "opis-colibri/core": "1.0.x-dev",
        "opis/orm": "1.0.*@dev",
        "opis/container": "3.0.x-dev",
        "opis/routing": "5.0.x-dev",
        "opis/http": "dev-refactor-streams as 3.0",
        "opis/http-routing": "5.0.x-dev",
        "opis/view": "5.0.x-dev",
        "opis/events": "5.0.x-dev",
        "opis/session": "4.0.*@dev",
        "opis/validation": "1.0.*@dev",
        "symfony/console": "^3.1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "config": {
        "preferred-install": "dist"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    }
}
