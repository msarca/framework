{
    "name": "opis/colibri",
    "type": "project",
    "description": "A different kind of framework",
    "keywords": ["framework", "php"],
    "homepage": "http://opis.io",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Marius Sarca",
            "email": "marius.sarca@gmail.com"
        }
    ],
    "require": {
        "opis-colibri/install": "1.0.*@dev",
        "opis-colibri/system": "1.0.*@dev",
        "opis-colibri/manager": "1.0.*@dev",
        "opis-colibri/welcome": "1.0.*@dev"
    },
    "autoload":{
        "psr-4": {"Opis\\Colibri\\": "system/lib"},
        "classmap": ["system/includes/collectors.php"],
        "files": ["system/includes/functions.php"]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "extra": {
        "installer-paths": {
            "system/modules/{$name}/":["opis-colibri/system", "opis-colibri/install",
                                       "opis-colibri/manager"]
        },
        "installer-modules": ["install", "system"], 
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
