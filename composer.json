{
    "name": "opis/colibri",
    "type": "composer-plugin",
    "license": "Apache-2.0",
    "description": "Opis Colibri Framework",
    "keywords": ["opis", "colibri", "framework", "core"],
    "homepage": "http://opis.io",
    "authors": [
        {
            "name": "Marius Sarca",
            "email": "marius.sarca@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Opis\\Colibri\\": "src/"
        },
        "files": ["res/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Opis\\Colibri\\Test\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.0.0",
        "composer-plugin-api": "^1.0",
        "composer/composer": "1.2.*",
        "opis/database": "4.0.x-dev",
        "opis/container": "3.0.x-dev",
        "opis/http": "^2.0.0",
        "opis/http-routing": "5.0.*@dev",
        "opis/view": "5.0.*@dev",
        "opis/events": "5.0.*@dev",
        "opis/config": "3.0.x-dev",
        "opis/cache": "4.0.x-dev",
        "opis/session": "4.0.x-dev",
        "opis/validation": "1.0.x-dev",
        "symfony/console": "^3.1.3",
        "symfony/filesystem": "^3.1.3",
        "doctrine/annotations": "1.2.*",
        "psr/log": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "5.4.*"
    },
    "config": {
        "preferred-install": "dist"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "extra": {
        "class": "Opis\\Colibri\\Composer\\Plugin",
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    }
}
